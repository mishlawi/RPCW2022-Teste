extends layout

block content
  .w3-container
        h3 CLAV: Classificação e Avaliação da Informação Pública
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal.w3-margin-top
        h4 Lista dos Índice dos Termos
      table.w3-table-all
        tr
          th Termo
          th ID da Classe 
          th Título da Classe
        each c in lista
                tr
                    td= c.termo
                    td
                        a(href='/classes/c'+c.idClasse)= c.idClasse
                    td
                        a(href='/classes/c'+c.idClasse)= c.tituloClasse
    footer.w3-container.w3-teal
        p
            a(href="/") Voltar à página inicial